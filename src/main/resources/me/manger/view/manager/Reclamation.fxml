<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.manger.controller.manager.ReclamationController">
   <children>
      <TableView fx:id="table" layoutX="15.0" layoutY="85.0" prefHeight="500.0" prefWidth="670.0">
        <columns>
          <TableColumn fx:id="clmCreated" prefWidth="120.0" text="Datum otvaranja" />
          <TableColumn fx:id="clmCompleted" prefWidth="125.0" text="Datum zatvaranja" />
            <TableColumn fx:id="clmStatus" prefWidth="105.0" text="Status" />
            <TableColumn fx:id="clmProperty" text="Nekretnina" />
            <TableColumn fx:id="clmMessage" prefWidth="240.0" text="Komentar" />
        </columns>
      </TableView>
      <HBox alignment="CENTER" layoutX="30.0" layoutY="15.0" prefHeight="55.0">
         <children>
            <Button mnemonicParsing="false" onAction="#create" prefHeight="40.0" prefWidth="200.0" text="Otvori reklamaciju">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#editStatus" prefHeight="40.0" prefWidth="200.0" text="Izmeni status">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#details" prefHeight="40.0" prefWidth="200.0" text="Detalji">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
