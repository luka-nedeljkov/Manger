<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.manger.controller.LoginController">
   <children>
      <Label text="Manger">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <VBox maxWidth="200.0">
         <children>
            <Label text="Korisničko ime" />
            <TextField fx:id="txfUsername" maxWidth="200.0">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </TextField>
            <Label text="Lozinka" />
            <PasswordField fx:id="pwfPassword" maxWidth="200.0" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </VBox>
      <Label fx:id="errorMessage" textFill="RED">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      <Button mnemonicParsing="false" onAction="#login" prefHeight="40.0" prefWidth="100.0" text="Log In">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Button>
   </children>
</VBox>
